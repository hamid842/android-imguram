<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_hot">

    <fragment
        android:id="@+id/navigation_hot"
        android:name="com.example.testnav.ui.feed.FeedFragment"
        android:label="@string/title_hot"
        tools:layout="@layout/fragment_feed">
        <argument
            android:name="feed"
            android:defaultValue="hot"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/navigation_top"
        android:name="com.example.testnav.ui.feed.FeedFragment"
        android:label="@string/title_top"
        tools:layout="@layout/fragment_feed">
        <argument
            android:name="feed"
            android:defaultValue="top"
            app:argType="string" />
    </fragment>
</navigation>